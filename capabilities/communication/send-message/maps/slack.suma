profile = "communication/send-message@1.1"
provider = "slack"

map SendMessage {
  http POST "/chat.postMessage" {
    security "bearer_token"

    request {
      body {
        channel = input.destination
        text = input.text
      }
    }

    response 200 {
      map result if (body.ok) {
        destination = body.channel
        messageId = body.ts
      }

      map error if (!body.ok) {
        title = body.error
      }
    }
  }
}
